{
  "name": "__MSG_ext_name__",
  "description": "__MSG_ext_desc__",
  "version": "1.0.3",
  "manifest_version": 3,
  "default_locale": "en",
  "icons": {
    "16": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo-128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": ["*://*/*"],
  "permissions": [
    "alarms",
    "downloads",
    "webRequest",
    "webRequestAuthProvider",
    "unlimitedStorage",
    "storage",
    "proxy"
  ],
  "incognito": "split",
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
